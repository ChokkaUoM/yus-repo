#!/bin/sh

cmake -DCMAKE_BUILD_TYPE=RELEASE -DCMAKE_INSTALL_PREFIX=/usr/local -DUSE_NEON=ON -DCMAKE_TOOLCHAIN_FILE=./armhf.cmake -DWITH_GSTREAMER=ON -DWITH_GTK=ON -DWITH_JASPER=ON -DWITH_JPEG=ON -DWITH_OPENEXR=ON -DWITH_OPENGL=ON -DWITH_PNG=ON -DWITH_TIFF=ON -DWITH_UNICAP=ON -DWITH_V4L=ON -DWITH_XINE=ON -DBUILD_EXAMPLES=ON -DINSTALL_C_EXAMPLES=ON -DBUILD_NEW_PYTHON_SUPPORT=ON -DINSTALL_PYTHON_EXAMPLES=ON ..
